# ========================================
# VAULT BREAKER - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your values

# OpenAI API Key (optional - for AI predictions)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (optional - for sending score emails)
# To use Gmail:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use that App Password below

EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM_NAME=Vault Breaker

# Admin Password (change this!)
ADMIN_PASSWORD=admin123

# Server Port (Render will set this automatically)
PORT=3000
